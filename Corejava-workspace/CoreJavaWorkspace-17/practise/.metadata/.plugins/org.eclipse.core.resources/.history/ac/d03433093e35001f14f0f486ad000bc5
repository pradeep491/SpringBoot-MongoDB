package com.test;

import java.util.Arrays;
import java.util.LinkedHashMap;
import java.util.Map;
import java.util.function.Function;
import java.util.stream.Collectors;

public class FirstNonRepeatedCharStream {
	public static void main(String[] args) {
		System.out.println("first repeated character code...!");
		String str = "Java Guides".replaceAll("\\s+", "").toLowerCase();
		Map<String, Long> repeatChar = Arrays.stream(str.split(""))
				.collect(Collectors.groupingBy(Function.identity(), LinkedHashMap::new, Collectors.counting()));

		String firstRepeatChar = repeatChar.entrySet().stream().filter(entry -> entry.getValue() > 1)
				.map(entry -> entry.getKey())
				//.findFirst()
				//.get();
		System.out.println(firstRepeatChar);
		
		System.out.println("first non repeated character code...!");
		String str1 = "Java Guides".replaceAll("\\s+", "").toLowerCase();
		Map<String, Long> repeatNonChar = Arrays.stream(str1.split(""))
				.collect(Collectors.groupingBy(Function.identity(), LinkedHashMap::new, Collectors.counting()));

		String firstNonRepeatChar = repeatNonChar.entrySet().stream().filter(entry -> entry.getValue() == 1)
				.map(entry -> entry.getKey()).findFirst().get();
		System.out.println(firstNonRepeatChar);
	}
}
