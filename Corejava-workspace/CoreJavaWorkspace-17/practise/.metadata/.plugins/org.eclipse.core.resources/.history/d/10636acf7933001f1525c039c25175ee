package com.test;

import java.util.Arrays;
import java.util.List;
import java.util.Map;
import java.util.Map.Entry;
import java.util.Set;
import java.util.stream.Collectors;

public class ListOfEvenAndOdd {
public static void main(String[] args) {
	List<Integer> list = Arrays.asList(1,4,5,6,7,8,9,12,13,14,15,17,18);
	Map<Boolean,List<Integer>> map = list.stream().collect(Collectors.partitioningBy(i->i%2 == 0));
	System.out.println(map);
	
	Set<Entry<Boolean,List<Integer>>> set = map.entrySet();
	
	for(Entry<Boolean,List<Integer>> entry:set ) {
		System.out.println("---------------");
		if(entry.getKey()) {
			System.out.println("Even Numbers");
		
		}
		else {
			System.out.println("Odd Numbers");
		}
		System.out.println("----------------");
		List<Integer> list1 =entry.getValue();
		for(int i:list1) {
			System.out.println(i);
		}
	}
}
}
